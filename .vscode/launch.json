{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug frontend",
      "type": "edge",
      "request": "launch",
      "version": "dev",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "type": "node-terminal",
      "name": "Start frontend in dev",
      "request": "launch",
      "command": "npm run start",
      "cwd": "${workspaceFolder}"
    }
  ]
}
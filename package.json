{
  "name": "react-timesheet",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^5.6.2",
    "@material-ui/core": "^4.7.0",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.30",
    "@material-ui/styles": "^4.6.0",
    "@reduxjs/toolkit": "^1.0.4",
    "@types/node": "12.12.11",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "axios": "^0.19.0",
    "formik": "^2.0.6",
    "formik-material-ui": "^1.0.0",
    "i18next": "^19.0.1",
    "i18next-browser-languagedetector": "^4.0.1",
    "localforage": "^1.7.3",
    "lodash-es": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-i18next": "^11.2.2",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "source-map-explorer": "^2.1.1",
    "typescript": "3.7.2",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".tsx"
          ]
        }
      ],
      "@typescript-eslint/indent": "off",
      "linebreak-style": "off",
      "react/jsx-one-expression-per-line": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "import/prefer-default-export": "off",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "react/prop-types": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ],
          "paths": [
            "src"
          ]
        }
      }
    },
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "cracoConfig": "craco.config.ts",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es)"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/lodash-es": "^4.17.3",
    "@types/react-redux": "^7.1.5",
    "@types/react-router": "^5.1.3",
    "@types/react-router-config": "^5.0.1",
    "@types/react-router-dom": "^5.1.3",
    "@types/yup": "^0.26.24",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "react-refresh": "^0.7.0",
    "react-refresh-webpack-plugin": "git+https://github.com/pmmmwh/react-refresh-webpack-plugin.git",
    "ts-jest": "^24.2.0"
  }
}
